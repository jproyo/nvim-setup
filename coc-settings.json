{
  "languageserver": {
    "haskell": {
      "command": "ghcide",
      "args": ["--lsp"],
      "rootPatterns": [".stack.yaml", "cabal.config", "package.yaml", "stack.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 10,
          "completionSnippetsOn": false
        }
      }
    }
  }
}
